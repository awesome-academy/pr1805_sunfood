<div class="col-md-5 pd-0 product-customer float-left">
  <%= form_for Review.new, remote: true do |f| %>
    <%= f.hidden_field :product_id, value: product.id %>
    <div class="customer-rate-form pd-20">
      <label>1. <%= t(".rating") %> : </label>
      <span class="customer-ratting">
        <% (1..5).reverse_each do |i| %>
          <%= f.radio_button :rate, i, class: "star star-#{i}", id: "star-#{i}" %>
          <label class="star star-<%= i %>" for="star-<%= i %>"></label>
        <% end %>
      </span>
    </div>
    <div class="customer-form-group">
      <label>2. <%= t(".comment") %>:</label>
      <%= f.text_area :content, placeholder: t(".comment"), id: "review_title", class: "form-control input-sm" %>
      <%= f.submit t(".review_button"), class: "btn btn-add-review" %>
    </div>
  <% end %>
</div>
