<header id="header" class="header clearfix">
  <div class="header-wrapper">
    <div id="top-bar" class="header-top hide-for-sticky nav-dark">
      <div class="flex-row container">
        <div class="flex-col hide-for-medium flex-right">
          <ul class="nav top-bar-nav nav-small">
            <div class="col-md-6">
              <div class="pull-left">
                <li>
                  <a href="#" class="nav-top-link">
                    <i class="fa fa-certificate" aria-hidden="true"></i>
                    <span>Kênh bán hàng</span>
                  </a>
                </li>
              </div>
            </div>
            <div class="col-md-6">
              <div class="pull-right">
                <li>
                  <%= link_to "/en", class: "nav-top-link" do %>
                    <i class="fa fa-globe" aria-hidden="true"></i>
                    <span>English</span>
                  <% end %>
                </li>
                <li>
                  <%= link_to "/vi", class: "nav-top-link" do %>
                    <i class="fa fa-globe" aria-hidden="true"></i>
                    <span>Việt Nam</span>
                  <% end %>
                </li>
              </div>
            </div>
          </ul>
        </div>
      </div>
    </div>
    <!-- start header-main -->
    <div id="masthead" class="header-main hide-for-sticky">
      <div class="flex-row container">
        <div class="header-middle clearfix">
          <div class="col-md-2 col-xs-12 float-left pl-0">
            <div class="logo">
              <%= link_to root_url do %>
                <%= image_tag "logo.png" %>
              <% end %>
            </div>
          </div>
          <div class="col-md-5 col-xs-12 float-left">
            <div class="header-index-search">
              <div class="header-search">
                <form action="/search" method="get" role="search">
                  <input class="header-search-control" name="s" type="search" placeholder="<%= I18n.t (".placeholder_search") %>" >
                  <button class="header-search-button" type="submit"><i class="fa fa-search" aria-hidden="true"></i><%= t(".search") %></button>
                </form>
              </div>
            </div>
          </div>
          <div class="col-md-5 col-xs-12 float-left">
            <div class="featured-box">
              <div class="oder-box">
                <a href="#">
                  <div class="tracking">
                    <i class="tikicon icon-tracking"></i>
                    <span><%= t(".track") %> <br> <%= t(".order") %></span>
                  </div>
                </a>
              </div>
              <div class="notification-box">
                <a href="#">
                  <div class="tracking">
                    <i class="tikicon icon-notification"></i>
                    <span class="notification"></span>
                    <span><%= t(".my") %> <br> <%= t(".notification") %></span>
                  </div>
                </a>
              </div>
              <div class="login-box dropdown">
                <div class="tracking">
                  <i class="tikicon icon-user"></i>
                  <span><%= t(".account") %> <br> <small><%= t(".notification_account") %></small></span>
                </div>
                <% if user_signed_in? %>
                  <div class="dropdown-content">
                    <ul>
                      <li>
                        <%= link_to "Log out", destroy_user_session_path, method: :delete %>
                      </li>
                    </ul>
                  </div>
                <% else %>
                  <div class="dropdown-content social">
                    <a href="#" class="btn" data-popup-open="popup-1" ><%= t(".signin") %></a>
                    <a href="#" class="btn" data-popup-open="popup-1"><%= t(".signup") %></a>
                    <%= link_to user_facebook_omniauth_authorize_path, class: "facebook-login" do %>
                      <span class="facebook-icon">
                        <i class="tikicon icon-facebook-white"></i>
                      </span>
                      <%= t(".signin_facebook") %>
                    <% end %>
                    <%= link_to user_google_oauth2_omniauth_authorize_path, class: "google-login" do %>
                      <span class="google-icon">
                        <i class="tikicon icon-google-white"></i>
                      </span>
                      <%= t(".signin_google") %>
                    <% end %>
                  </div>
                <% end %>
              </div>
              <div class="index-cart">
                <%= link_to carts_path do %>
                  <div class="header-cart">
                    <%= render "product_orders/header_cart" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- end header-main -->
    <div id="menu-nav" class="header-menu-main">
      <div class="flex-row container">
        <div class="col-md-3 col-sm-12 col-xs-12 float-left pr-0">
          <div id="section-verticalmenu" class="block-verticalmenu float-vertical <%= "active-desk" unless current_page?(root_url) %>">
            <div class="bg-vertical"></div>
            <h4 class="block-title float-vertical-button">
              <i class="Menu-icon tikicon icon-burger-menu"></i>
              <span class="verticalMenu-text"><%= t(".category") %></span>
            </h4>
            <div class="block_content">
              <div id="verticalmenu" class="verticalmenu" role="navigation">
                <ul class="nav navbar-nav nav-verticalmenu">
                  <li class=" vermenu-option-1 ">
                    <a class="link-lv1" href="#" title="Khuyến mại sốc">
                      <i class="fa fa-fire"></i>
                      <span class="menu-icon">
                        <span class="menu-title">Khuyến mại sốc</span>
                      </span>
                    </a>
                  </li>
                  <li class="parent vermenu-option-2 dropdown">
                    <a class=" link-lv1" href="#">
                      <i class="fa fa-male"></i>
                      <span class="menu-icon">
                        <span class="menu-title">Thời trang nam</span>
                      </span>
                    </a>
                  </li>
                  <li class="parent vermenu-option-3 dropdown">
                    <a class=" link-lv1" href="#">
                      <i class="fa fa-female"></i>
                      <span class="menu-icon">
                        <span class="menu-title">Thời trang nữ</span>
                      </span>
                    </a>
                  </li>
                  <li class="parent vermenu-option-4 dropdown">
                    <a class=" link-lv1" href="#">
                      <i class="fa fa-eye"></i>
                      <span class="menu-icon">
                        <span class="menu-title">Kính mắt thời trang</span>
                      </span>
                    </a>
                  </li>
                  <li class="parent vermenu-option-5 dropdown">
                    <a class=" link-lv1" href="#">
                      <i class="fa fa-diamond"></i>
                      <span class="menu-icon">
                        <span class="menu-title">Phụ kiện hot</span>
                      </span>
                    </a>
                  </li>
                  <li class="vermenu-option-6">
                    <a class="link-lv1" href="#" title="Đồ trang sức">
                      <i class="fa fa-clock-o"></i>
                      <span class="menu-icon">
                        <span class="menu-title">Đồ trang sức</span>
                      </span>
                    </a>
                  </li>
                  <li class="vermenu-option-7">
                    <a class="link-lv1" href="#" title="Đồng hồ">
                      <i class="fa fa-shopping-bag"></i>
                      <span class="menu-icon">
                        <span class="menu-title">Đồng hồ</span>
                      </span>
                    </a>
                  </li>
                  <li class="vermenu-option-8">
                    <a class="link-lv1" href="#" title="Balo và Túi xách">
                      <i class="fa fa-futbol-o"></i>
                      <span class="menu-icon">
                        <span class="menu-title">Balo và Túi xách</span>
                      </span>
                    </a>
                  </li>
                  <li class="hidden-item vermenu-option-9">
                    <a class="link-lv1" href="#" title="Giày dép">
                      <i class="fa fa-shopping-cart"></i>
                      <span class="menu-icon">
                        <span class="menu-title">Giày dép</span>
                      </span>
                    </a>
                  </li>
                  <li class="hidden-item vermenu-option-10">
                    <a class="link-lv1" href="#" title="Mẹ &amp; Bé">
                      <i class="fa fa-heartbeat"></i>
                      <span class="menu-icon">
                        <span class="menu-title">Mẹ &amp; Bé</span>
                      </span>
                    </a>
                  </li>
                  <li class="hidden-item vermenu-option-11">
                    <a class="link-lv1" href="#" title="Mỹ phẩm">
                      <i class="fa fa-headphones"></i>
                      <span class="menu-icon">
                        <span class="menu-title">Mỹ phẩm</span>
                      </span>
                    </a>
                  </li>
                  <li class="hidden-item vermenu-option-11">
                    <a class="link-lv1" href="#" title="Mỹ phẩm">
                      <i class="fa fa-headphones"></i>
                      <span class="menu-icon">
                        <span class="menu-title">Mỹ phẩm</span>
                      </span>
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <% if current_page?(root_path) %>
          <div class="section-ss-banner col-md-9 col-sm-12 col-xs-12 float-left">
            <div class="section-ss col-md-8 col-sm-8 col-xs-12 no-padding float-left">
              <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <%= image_tag "slider/slider2.png", class: "d-block w-100" %>
                  </div>
                  <div class="carousel-item">
                    <%= image_tag "slider/slider2.png", class: "d-block w-100" %>
                  </div>
                  <div class="carousel-item">
                    <%= image_tag "slider/slider2.png", class: "d-block w-100" %>
                  </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
              <div class="col-md-12 no-padding col-sm-12 hidden-xs">
                <div class="banner-right col-md-6 col-sm-6 col-xs-12 float-left padding-right-small">
                  <a href="#" title="">
                    <%= image_tag "slider/ss_banner_img_3.jpg", class: "img-responsive" %>
                    <div class="hover_collection"></div>
                  </a>
                </div>
                <div class="banner-right col-md-6 col-sm-6 float-left padding-left-small">
                  <a href="#" title="">
                    <%= image_tag "slider/ss_banner_img_3.jpg", class: "img-responsive" %>
                    <div class="hover_collection"></div>
                  </a>
                </div>
              </div>
            </div>
            <div class="banner-right-one col-md-4 col-sm-4 float-left pr-0">
              <a href="#" title="">
                <%= image_tag "slider/ss_banner_img_1.jpg", class: "img-responsive" %>
                <div class="hover_collection"></div>
              </a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</header>
