<main id="main" class="content-main clearfix">
  <div class="flex-row container">
    <div class="col-md-12">
      <div class="login-devices-content clearfix">
       <div class="col-md-8 float-left">
        <div class="login-devices-text">
          <h3>Bán hàng chuyên nghiệp</h3>
          <div class="sub-title">
            Quản lý shop của bạn một cách hiệu quả hơn trên Shopee với Shopee - Kênh Người bán
          </div>
        </div>
        <div class="login-image"></div>
      </div>
      <div class="login-devices-form col-md-4 float-left">
        <h3><%= t(".login_h2") %></h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field-txt">
            <div class="icon-social">
              <i class="fa fa-user-circle-o" aria-hidden="true"></i>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Nhap email" %>
          </div>
          <div class="field-txt">
            <div class="icon-social">
              <i class="fa fa-lock" aria-hidden="true"></i>
            </div>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Nhap password" %>
          </div>
          <% if devise_mapping.rememberable? %>
          <div class="field clearfix">
            <div class="remember-me">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, t(".remember") %>
            </div>
            <div class="forgot-password">
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to t(".forgot_password"), new_password_path(resource_name) %><br />
              <% end %>
            </div>
          </div>
          <% end %>
          <div class="actions">
            <%= f.submit t(".login") %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
</main>
